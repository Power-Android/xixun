<?xml version="1.0" encoding="utf-8"?>
<com.power.travel.xixuntravel.weight.VerticalLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/first_layout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/first_one_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/first_one" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nima_logo"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/first_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/nimabi_1" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/first_two_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yueban_two_bg_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_to_youji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/yiluxiangxi" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/first_two_down" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first_three_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yueban_three_bg_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_to_yueban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/yiluzhuixun" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/first_three_down" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first_four_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yueban_four_bg_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_to_daren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/jiyiyouxin" />
    </LinearLayout>

</com.power.travel.xixuntravel.weight.VerticalLinearLayout>