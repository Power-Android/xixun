<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_gradeview_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout 
         android:id="@+id/menu_gradeview_itemlayout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

         <ImageView
             android:id="@+id/menu_gradeview_itemima"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true" />

    </RelativeLayout>
   

    <TextView
        android:id="@+id/menu_gradeview_itemtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_gradeview_itemlayout"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_gray_color3"
        android:textSize="@dimen/text_mid_size" />

</RelativeLayout>