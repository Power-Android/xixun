<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xmlbackground_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xmlbackground"
        android:orientation="vertical" >

        <include layout="@layout/item_title_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_graybg"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/my_clear_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_gray_topcorners_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="清理缓存"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_big_size" >
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:src="@drawable/right" />
            </RelativeLayout>

            <View
                style="@style/LineStyle"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <RelativeLayout
                android:id="@+id/my_about_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:background="@drawable/btn_gray_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="关于我们"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_big_size" >
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:src="@drawable/right" />
            </RelativeLayout>

            <View
                style="@style/LineStyle"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <RelativeLayout
                android:id="@+id/my_voice_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:background="@drawable/btn_gray_bottomcorners_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="声音通知"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_big_size" >
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:src="@drawable/right" />
            </RelativeLayout>

             <View
                style="@style/LineStyle"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <RelativeLayout
                android:id="@+id/my_changepwd_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:background="@drawable/btn_gray_bottomcorners_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="修改密码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_big_size" >
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:src="@drawable/right" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/exit"
            style="@style/btn_text_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_red_bg"
            android:text="退出登录" 
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>