<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/edittext_bg_color"
        android:orientation="vertical">
        <!---->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >
            <LinearLayout
                android:id="@+id/filtrate_yueban_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1.0"
                android:background="@drawable/tab_btn_filtrate_normalbg"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/filtrate_yueban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:text="租    房"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid2_size" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="户    型："
                android:textColor="@color/black"
                android:textSize="@dimen/text_big_size" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/zuche_pinpai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="室"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size" />

                <TextView
                    android:id="@+id/zuche_chexing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="厅"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size" />

                <TextView
                    android:id="@+id/zuche_cheling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="车龄"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="租    金："
                android:textColor="@color/black"
                android:textSize="@dimen/text_big_size" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/zuche_zujin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="租金"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="位    置："
                android:textColor="@color/black"
                android:textSize="@dimen/text_big_size" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/zuche_shi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="市"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size" />

                <TextView
                    android:id="@+id/zuche_qu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="区"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="年龄"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/LineStyle"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edittext_bg_color_shen"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/filtarate_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_filtrate_bg"
                android:layout_weight="1.0"
                android:layout_marginRight="0.5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="重置"
                android:textColor="@color/black"
                android:textSize="@dimen/text_mid2_size" />


            <Button
                android:id="@+id/filtarate_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_filtrate_bg"
                android:layout_weight="1.0"
                android:layout_marginLeft="0.5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="确定"
                android:textColor="@color/black"
                android:textSize="@dimen/text_mid2_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

