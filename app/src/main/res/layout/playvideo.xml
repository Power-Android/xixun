<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xmlbackground_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xmlbackground"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/addaddress_title"
            style="@style/Title_RelativeLayoutStyle" >

            <ImageView
                android:id="@+id/back"
                style="@style/Title_ImageViewBack"
                android:layout_centerVertical="true" >
            </ImageView>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:text="标题"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/activity_title_size" />

            <TextView
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="@dimen/text_big_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_graybg"
            android:padding="10dp" >

            <EditText
                android:id="@+id/sendvideo_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="600"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:gravity="top"
                android:hint="这一刻的想法"
                android:minLines="5"
                android:maxLines="5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_mid_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fl_videoView_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/edittext_graybg"
            android:gravity="center">

            <com.power.travel.xixuntravel.video.SurfaceVideoView
                android:id="@+id/videoview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>