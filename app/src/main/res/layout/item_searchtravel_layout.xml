<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/item_viewsport_face"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/item_viewsport_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_viewsport_face"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/item_viewsport_face"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textSize="@dimen/text_big_size" />

        <TextView
            android:id="@+id/item_viewsport_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_viewsport_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/item_viewsport_face"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_color_gray1"
            android:textSize="@dimen/text_mid_size"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>