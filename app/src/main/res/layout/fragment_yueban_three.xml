<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/xmlbackground_color">
    <RelativeLayout
        android:id="@+id/addaddress_title"
        style="@style/Title_RelativeLayoutStyle"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >
        <TextView
            android:id="@+id/locaton_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:singleLine="true"
            android:text="    "
            android:drawableRight="@drawable/button_nav_down"
            android:textColor="@color/white"
            android:textSize="@dimen/text_big_size" />
        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/locaton_tv"
            android:background="@drawable/edittext_search_redbg"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/yueban_search_white_white" />

            <TextView
                android:id="@+id/search_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:text="搜索  游记/旅行地/人"
                android:textColor="@color/white"
                android:textSize="@dimen/text_mid2_size" />
        </LinearLayout>
    </RelativeLayout>
    <com.power.travel.xixuntravel.weight.RecyclerViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.power.travel.xixuntravel.weight.RecyclerViewPager>
    <!--<LinearLayout
        android:id="@+id/tab_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_first_welcome_splash" />
    </LinearLayout>-->
</LinearLayout>