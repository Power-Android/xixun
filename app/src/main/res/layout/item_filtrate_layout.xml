                    android:paddingTop="10dp"
                    android:text="约车"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid2_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="出发地："
                android:textColor="@color/black"
                android:textSize="@dimen/text_big_size" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/trips_province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="省"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size" />

                <TextView
                    android:id="@+id/trips_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="市"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size" />

                <TextView
                    android:id="@+id/trips_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="区"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="性    别："
                android:textColor="@color/black"
                android:textSize="@dimen/text_big_size" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/trips_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="性别"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="性别"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="性别"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="年    龄："
                android:textColor="@color/black"
                android:textSize="@dimen/text_big_size" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/trips_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="年龄"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="年龄"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="年龄"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:id="@+id/trips_car">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="        车："
                android:textColor="@color/black"
                android:textSize="@dimen/text_big_size">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/trips_car_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="有无"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="年龄"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_mid_size"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_filtrate_more_bg"
                    android:drawableRight="@drawable/more_down_huang"
