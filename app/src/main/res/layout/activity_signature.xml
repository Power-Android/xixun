<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xmlbackground_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xmlbackground"
        android:orientation="vertical" >

        <include layout="@layout/item_title_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_graybg"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg_feedback"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/signature_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="30"
                    android:background="@null"
                    android:gravity="top"
                    android:minLines="6"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_big_size" />

                <TextView
                    android:id="@+id/signature_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:text="0/30"
                    android:textColor="@color/text_gray_color"
                    android:textSize="@dimen/text_mid_size" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/upload"
            style="@style/btn_text_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_red_bg"
            android:text="чбошод" />
    </LinearLayout>

</LinearLayout>