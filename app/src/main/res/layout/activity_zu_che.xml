<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.power.travel.xixuntravel.activity.ZuCheActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/item_title_layout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/xmlbackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#EEEEEE"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/trips_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="标题："
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_mid2_size" />

                        <EditText
                            android:id="@+id/biaoti_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="end"
                            android:padding="10dp"
                            android:maxLength="40"
                            android:hint="请填写标题"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_mid2_size" />
                    </LinearLayout>

                    <View
                        style="@style/LineStyle"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pinpai_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="品牌："
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_mid2_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/pinpai_tv"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_more_bg"
                                android:drawableRight="@drawable/more_down"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="品牌"
                                android:textColor="@color/text_color_gray1"
                                android:textSize="@dimen/text_mid_size" />

                            <TextView
                                android:id="@+id/chexing_tv"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_more_bg"
                                android:drawableRight="@drawable/more_down"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="车型"
                                android:textColor="@color/text_color_gray1"
                                android:textSize="@dimen/text_mid_size" />

                            <TextView
                                android:id="@+id/cheling_tv"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_more_bg"
                                android:drawableRight="@drawable/more_down"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="车龄"
                                android:textColor="@color/text_color_gray1"
                                android:textSize="@dimen/text_mid_size" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        style="@style/LineStyle"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/jiage_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="价格（天）："
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_mid2_size" />

                        <EditText
                            android:id="@+id/jiage_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="请输入价格"
                            android:gravity="end"
                            android:digits="1234567890."
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_mid2_size" />
                    </LinearLayout>

                    <View
                        style="@style/LineStyle"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pailiang_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="排量："
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_mid2_size" />

                        <EditText
                            android:id="@+id/pailiang_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="end"
                            android:padding="10dp"
                            android:hint="请输入排量"
                            android:digits="1234567890."
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_mid2_size" />
                    </LinearLayout>

                    <View
                        style="@style/LineStyle"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/weizhi_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="位置："
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_mid2_size" />

                        <EditText
                            android:id="@+id/weizhi_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="请输入位置"
                            android:background="@null"
                            android:gravity="end"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_mid2_size" />
                    </LinearLayout>

                    <View
                        style="@style/LineStyle"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lianxifangshi_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="联系方式："
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_mid2_size" />

                        <EditText
                            android:id="@+id/lxfs_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="请输入联系方式"
                            android:background="@null"
                            android:gravity="end"
                            android:digits="0123456789"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_mid2_size" />
                    </LinearLayout>

                    <View
                        style="@style/LineStyle"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/neirong_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="内容："
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_mid2_size" />

                        <EditText
                            android:id="@+id/content_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_linewhitebg"
                            android:gravity="top"
                            android:minLines="6" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/shangchuan_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="上传照片："
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_mid2_size" />
                    </LinearLayout>

                    <com.power.travel.xixuntravel.weight.MyGridView
                        android:id="@+id/noScrollgridview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:horizontalSpacing="10dp"
                        android:numColumns="4"
                        android:scrollbars="none"
                        android:verticalSpacing="10dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/upload"
                    style="@style/btn_text_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_red_bg"
                    android:text="发布" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>
