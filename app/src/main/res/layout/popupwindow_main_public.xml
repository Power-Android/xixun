<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/public_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <!-- android:layout_marginBottom="80dp" -->

        <ImageView
            android:id="@+id/public_trip_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/public_vedio"
            android:src="@drawable/publictrip_iv" />

        <ImageView
            android:id="@+id/public_vedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/publicvedio_iv"
            android:layout_above="@+id/bottom"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/public_travel_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/public_vedio"
            android:src="@drawable/publictravel_iv" />

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <LinearLayout
                android:id="@+id/tab_yueban_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/tab_yueban_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:src="@drawable/tab_yueban" />

                <TextView
                    android:id="@+id/tab_yueban_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="5dp"
                    android:text="约伴"
                    android:textColor="@drawable/tab_main_text_color"
                    android:textSize="@dimen/text_toosmall2_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_recomment_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/tab_recomment_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:src="@drawable/tab_recomment" />

                <TextView
                    android:id="@+id/tab_recomment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="2dp"
                    android:text="推荐"
                    android:textColor="@drawable/tab_main_text_color"
                    android:textSize="@dimen/text_toosmall2_size" />
            </LinearLayout>

            <ImageView
                android:id="@+id/tab_public"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/tab_public" />

            <LinearLayout
                android:id="@+id/tab_service_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/tab_service_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:src="@drawable/tab_service" />

                <TextView
                    android:id="@+id/tab_service_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="5dp"
                    android:text="服务"
                    android:textColor="@drawable/tab_main_text_color"
                    android:textSize="@dimen/text_toosmall2_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_persionalcenter_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/tab_persionalcenter_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:src="@drawable/tab_persionalcenter" />

                <TextView
                    android:id="@+id/tab_persionalcenter_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="5dp"
                    android:text="我的"
                    android:textColor="@drawable/tab_main_text_color"
                    android:textSize="@dimen/text_toosmall2_size" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>