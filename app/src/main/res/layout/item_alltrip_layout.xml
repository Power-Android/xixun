<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/item_alltrip_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_yueban_item_bg_new"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_alltrip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_mid_size" />
        <LinearLayout
            android:id="@+id/item_alltrip_attentin_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/item_alltrip_attentin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="关注"
                android:textColor="@color/text_color_gray2"
                android:textSize="@dimen/text_mid_size" />

            <ImageView
                android:id="@+id/item_alltrip_attentin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:src="@drawable/trip_attention" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/item_alltrip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="时间"
            android:textColor="@color/text_color_gray2"
            android:textSize="@dimen/text_mid_size" />

        <TextView
            android:id="@+id/item_alltrip_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/item_alltrip_time"
            android:text="浏览"
            android:textColor="@color/text_color_gray2"
            android:textSize="@dimen/text_mid_size" />

        <TextView
            android:id="@+id/item_alltrip_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/item_alltrip_see"
            android:text="评论"
            android:textColor="@color/text_color_gray2"
            android:textSize="@dimen/text_mid_size" />

        <TextView
            android:id="@+id/item_alltrip_ifyueban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_alltrip_comment"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/item_alltrip_ifyuecar"
            android:background="@drawable/text_huang_bg"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:text="约伴"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/text_toosmall_size" />

        <TextView
            android:id="@+id/item_alltrip_ifyuecar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_alltrip_comment"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/text_white_bg"
            android:drawableLeft="@drawable/trip_car"
            android:layout_alignParentRight="true"
            android:text="租车"
            android:textColor="@color/white"
            android:textSize="@dimen/text_toosmall_size"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_alltrip_ifyoucar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_alltrip_comment"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/text_white_bg"
            android:layout_alignParentRight="true"
            android:text="有车"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_toosmall_size"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_alltrip_infolayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp">
        <LinearLayout
            android:id="@+id/iv_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_alltrip_pic1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/item_alltrip_pic2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/item_alltrip_pic3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="2dp"
                android:paddingRight="4dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_layout"
            android:orientation="horizontal"
            android:background="@color/layout_bg_color"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp">

            <ImageView
                android:id="@+id/item_alltrip_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_face"
                android:padding="2dp" />

            <TextView
                android:id="@+id/item_alltrip_sendname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/item_alltrip_head"
                android:textColor="@color/white"
                android:textSize="@dimen/text_mid_size" />

            <ImageView
                android:id="@+id/item_alltrip_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/item_alltrip_sendname" />

            <ImageView
                android:id="@+id/item_alltrip_ifguide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/item_alltrip_sex"
                android:src="@drawable/alltrip_guider"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/item_alltrip_ifdriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/item_alltrip_ifguide"
                android:src="@drawable/alltrip_car"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/item_alltrip_sendtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/item_alltrip_ifdriver"
                android:textColor="@color/white"
                android:textSize="@dimen/text_mid_size"
                android:visibility="visible" />

            <TextView
                android:id="@+id/item_alltrip_sendaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/alltrip_location"
                android:drawablePadding="3dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_mid_size"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>